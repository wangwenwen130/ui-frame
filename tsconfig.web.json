{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "types": ["unplugin-vue-macros/macros-global"],
    "skipLibCheck": true,
  },
  "include": [
    "packages",
    "types/vue-shim.d.ts",
    "packages/**/*.vue",
    "packages/**/*.tsx",
    "packages/**/*.d.ts",
    "packages/**/*.ts"
 ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/*.md"
  ]
}
